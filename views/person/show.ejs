<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 

<main class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card mx-auto" style="width:37rem;">
                <div class="card-body">
                  <p class="card-title"><strong>Name: </strong> <%=persons.name%></p>
                  <p class="card-text"><strong>Email: </strong> <%=persons.email%></p>
                  <p class="card-text"><strong>Phone No.: </strong> <%=persons.phone%></p>
                  <p class="card-text"><strong>Checkin Time: </strong> <%=persons.checkin%></p>
                  <p class="card-text"><strong>Checkout Time: </strong> <%=persons.checkout%></p>
                  <p class="card-title"><strong>Status: </strong> <%=persons.isAvailable%></p>
                  <form class="d-inline-block" action="/persons/<%= persons._id %>?_method=PATCH" method="POST">
                    <button class="btn btn-outline-success">Checkout</button>
                  </form>
                  <form class="d-inline-block" action="/persons/<%= persons._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-outline-danger">Delete</button>
                  </form>
                </div>
              </div>
        </div>
    </div>
</main>
<%- include("../partials/footer") %> 